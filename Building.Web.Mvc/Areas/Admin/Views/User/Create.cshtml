@model Building.ViewModels.Account.RegisterViewModel

@Scripts.Render("~/admin/component/validetta/js")
@Styles.Render("~/admin/component/validetta/css")

<div class="well">
    <h4 class="header smaller lighter blue">ایجاد کاربر جدید</h4>
@using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", data_validetta = "required" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", data_validetta = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", data_validetta = "required" ,id="password"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", data_validetta = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("user Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("Name", (SelectList)ViewBag.Name, "--انتخاب نمایید--",new { @class = "form-control", data_validetta = "required"})
        </div>
    </div>

    <hr />
        <p>
            <input type="submit" value="درج" class="btn btn-sm btn-success" />
            <button class="btn btn-sm" data-dismiss="modal" aria-label="Close">لغو کردن</button>
        </p>
}

</div>
<script>
        $(document).ready(function () {
            $("form").validetta({
                bubblePosition: 'bottom',
                bubbleGapTop: 10,
                bubbleGapLeft: -5
            });
        });
</script>
