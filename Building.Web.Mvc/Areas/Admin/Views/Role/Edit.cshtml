@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@using (Html.BeginForm())
{

    <div class="alert alert-block alert-success">
        <p>
            <strong>
                <i class="ace-icon fa fa-pencil"></i>
                ویرایش
            </strong>

        </p>

        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <label for="Name">
            نام نقش
            <small class="text-warning"></small>
        </label>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "Name", data_validetta = "required" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <hr/>
        <p>
            <input type="submit" value="ویرایش" class="btn btn-sm btn-success" />
            <button class="btn btn-sm" data-dismiss="modal" aria-label="Close">لغو کردن</button>
        </p>
    </div>

}

